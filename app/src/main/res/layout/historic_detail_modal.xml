<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/modal_row"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/headerText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:firstBaselineToTopHeight="36dp"
            android:paddingStart="16dp"
            android:text="@string/historic_modal_title"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/message_row"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:paddingStart="16dp">

            <ImageButton
                android:id="@+id/message_icon"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:scaleX="1.7"
                android:scaleY="1.7"
                app:srcCompat="@drawable/twotone_message_24"
                app:tint="@color/grey" />

            <TextView
                android:id="@+id/message_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ip_row"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:paddingStart="16dp">

            <ImageButton
                android:id="@+id/ip_icon"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:scaleX="1.7"
                android:scaleY="1.7"
                app:srcCompat="@drawable/twotone_mail_24"
                app:tint="@color/grey" />

            <TextView
                android:id="@+id/ip_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="TextView" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>